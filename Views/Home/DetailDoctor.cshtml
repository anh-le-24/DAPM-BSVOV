
@{
    ViewData["Title"] = "Thông tin bác sĩ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/Article.css" asp-append-version="true">

<div class="container">
    <div class="bread-flow">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Trang chủ</a></li>
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="FillterDoctor">Tìm bác sĩ</a></li>
                <li class="breadcrumb-item active" aria-current="page">Thông tin bác sĩ</li>
            </ol>
        </nav>
    </div>
    
<div class="div-doc">
    <div class="row">
        <div class="col-md-5" style="background-color: #fbfbfb;">
            <div class="title-doc">
                <img src="~/Uploads/@ViewBag.ListDBS[0][30]" class="doctor-image mb-3">
                <div class="avar-doc">
                    <h3 class="fm-text">@ViewBag.ListDBS[0][29]</h3>
                    <h2 class="text-primary"><span style="color: black;">Chuyên môn: </span>@ViewBag.ListDBS[0][16]</h2>
                    @{
                        // Định dạng số tiền đẹp hơn
                        var amount = Convert.ToInt32(@ViewBag.ListDBS[0][25]);
                        var SoTien = amount.ToString("#,##0");  
                    }
                    <h2 class="text-primary"><span style="color: black;">Phí khám: </span>@SoTien đ</h2>
                    <a class="custom-btn" 
                        href="@(ViewBag.TaiKhoan != null ? Url.Action("BookExamine", "Home", new { MaBS = int.Parse(ViewBag.ListDBS[0][0].ToString()) }) : Url.Action("Login", "Home"))">
